<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    tools:context="com.example.buinam.mapchatdemo.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/text_Color"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNameRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/text_Color"
                android:hint="Tên của bạn"
                android:maxLines="1"
                android:padding="13dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />


            <EditText
                android:id="@+id/edtuserNameRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_Color"
                android:hint="Tên đăng nhập"
                android:maxLines="1"
                android:padding="13dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="(Bạn chỉ có thể sử dụng chữ cái, số và dấu chấm)"
                android:textColor="@color/text_Color"
                android:textSize="12sp"
                android:textStyle="normal|italic" />


            <EditText
                android:id="@+id/edtpassWordRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/text_Color"
                android:focusableInTouchMode="true"
                android:hint="Mật khẩu"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="13dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="(Mật khẩu trên 6 kí tự)"
                android:textColor="@color/text_Color"
                android:textSize="12sp"
                android:textStyle="normal|italic" />

            <EditText
                android:id="@+id/edtpassWordRegister2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/text_Color"
                android:focusableInTouchMode="true"
                android:hint="Nhập lại mật khẩu"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="13dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <Button
                android:id="@+id/btRegister"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_selector"
                android:enabled="false"
                android:text="Đăng kí"
                android:textAllCaps="false" />

            <ProgressBar
                android:id="@+id/progressBarRegister"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/btLoginUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:text="Bạn đã có tài khoản? Hãy Đăng Nhập!"
            android:textAllCaps="false"
            android:textColor="@color/text_Color" />
    </RelativeLayout>
</ScrollView>